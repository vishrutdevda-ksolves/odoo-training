<odoo>
    <record id="view_odoo_subject_form" model="ir.ui.view">
        <field name="name">odoo.subject.form</field>
        <field name="model">odoo.subject</field>
        <field name="arch" type="xml">
            <form string="Subject">
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_odoo_subject_tree" model="ir.ui.view">
        <field name="name">odoo.subject.tree</field>
        <field name="model">odoo.subject</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="action_odoo_subject" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">odoo.subject</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>Manage the subjects offered in your school system</p>
        </field>
    </record>
</odoo>
